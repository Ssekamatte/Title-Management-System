<script>

    //Project Description
    $.ajax({
        url: 'GetProjectCode',
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        type: 'GET',
        success: function (data) {
            if (data.length > 0) {
                var DropDownListDist = $('#Project_Code').ejDropDownList({
                    dataSource: data,
                    width: "240px",
                    enableFilterSearch: true,
                    fields: { value: "Project_Desc", text: "Project_Desc" }, showCheckbox: true,
                }).data("ejDropDownList");
            }
